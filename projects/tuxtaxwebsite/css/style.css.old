/* CASE 4 */

.nma-back {
  stroke-opacity: 1;
  fill-opacity: 0.5;
  stroke-width: 2px;
  stroke: #fff;
}

.nma-front {
  fill-opacity: 0.7;
  stroke-width: 2px;
  stroke: #fff;
}